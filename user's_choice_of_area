a = int(input("Enter the side/radius of the shape: "))
b = int(input("Enter your choice (1 for area of square, 2 for area of circle and 3 for area of rectangle):"))
if b == 1:
    area = a*a
    print("Area of square is:", area)
elif b==2:
    area = 3.14*a*a
    print("Area of circle is:", area)
elif b==3:
    c = int(input("Enter the breadth of the rectangle: "))
    area = a*c
    print("Area of rectangle is:", area)
else :
    print("Invalid input")
